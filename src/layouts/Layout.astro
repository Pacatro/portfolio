<style is:global>
  @font-face {
    font-family: "Mononoki Nerd Font";
    src: url("/fonts/MononokiNerdFont-Regular.ttf") format("truetype");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "Mononoki Nerd Font Bold Italic";
    src: url("/fonts/MononokiNerdFont-BoldItalic.ttf") format("truetype");
    font-weight: bold;
    font-style: italic;
    font-display: swap;
  }
  html,
  body {
    padding: 20px;
    width: 100%;
    height: 100%;
    background-color: #24273a;
  }

  p {
    font-family: "Mononoki Nerd Font";
    font-size: large;
    color: white;
  }
</style>
