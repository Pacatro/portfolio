---
interface Props {
  name: string;
  contents: string[];
}

const { name, contents } = Astro.props;
---

<header
  class="flex flex-col sm:flex-row items-center sm:justify-between py-3 gap-4"
>
  <p class="text-lg sm:text-xl font-bold text-green-300">
    {name}
  </p>

  <nav class="flex items-center gap-8">
    {
      contents.map((content) => {
        let formatContent = content.toLocaleLowerCase().replace(/\s+/g, "-");

        return (
          <a href={"#" + formatContent}>
            <p class="text-lg sm:text-xl font-bold text-cyan-400 hover:text-[#C8A8FC] transition duration-500">
              {content}
            </p>
          </a>
        );
      })
    }
  </nav>
</header>
