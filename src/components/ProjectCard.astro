---
import { Project } from "../api/project";

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<div class="w-full">
  <li class="list-none border-4 border-green-300 rounded-md p-1 my-5">
    <a
      href={project.link}
      target="_blank"
      class="block w-full text-snow p-4 rounded-md hover:opacity-100 opacity-90 transition-opacity duration-300"
    >
      <div class="flex justify-between items-center">
        <p class="text-base sm:text-lg font-bold text-cyan-300">
          {project.name}
          |
          {project.language}
        </p>
        <div
          class="flex items-center text-white gap-4 text-base sm:text-lg font-semibold"
        >
          <p>
            <span class="text-yellow-300 font-semibold text-xl">*</span>
            {project.stars}
          </p>
        </div>
      </div>
      <p class="mt-2 text-sm sm:text-lg text-gray-300">{project.description}</p>
    </a>
  </li>
</div>
